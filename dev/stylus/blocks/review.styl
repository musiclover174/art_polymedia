.feeds
  bgc $grey
  pt 105px
  pb 120px
  c $dark
  oh()
  @media $LandscapeMedium
    pt 70px
    pb 80px
  @media $PortraitMedium
    pt 75px
  .swiper-buttons
    pos absolute
    r 0
    t -111px
    @media $lDesktopSmall
      t -116px
    @media $desktopMin
      t -113px
    @media $LandscapeMedium
      r 32px
      t -111px
    @media $Portrait560
      dn()
  &__car
    mt 70px
    @media $PortraitMedium
      mt 40px
    @media $Mobile370
      mt 60px
    &.swiper-container
      overflow visible
  &__bottom
    mt 60px
    text-align center
    @media $Mobile370
      mt 40px
      text-align left
  &__toall
    ib()
    &:hover
      color $dark