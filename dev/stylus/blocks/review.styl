.reviews
  &__list
    &:last-child
      pb 120px
      @media $LandscapeMedium
        pb 80px
  &__info
    df()
    mt 93px
    mb 21px
    @media $LandscapeMax
      flex-direction column
      mt 55px
  &__side
    w 37%
    fontify 24px 600 32px
    mb 73px
    @media $LandscapeMax
      w 100%
    @media $LandscapeMedium
      fontify 20px 600 28px
  &__logos
    w 63%
    df(stretch, flex-start)
    flex-wrap wrap
    @media $LandscapeMax
      w calc(100% + 48px)
      ml -48px
    @media $PortraitMedium
      w calc(100% + 30px)
      ml -30px
    &-item
      df(center, center)
      w calc(100% / 3 - 48px)
      ml 48px
      mb 73px
      @media $PortraitMedium
        w calc(100% / 3 - 30px)
        ml 30px
        mb 53px
      @media $PortraitMin
        w calc(50% - 30px)

.review
  bgc white
  padding 48px
  df()
  flex-direction row-reverse
  color $dark
  @media $LandscapeMedium
    padding 32px
  @media $LandscapeMin
    flex-direction column
  @media $PortraitMedium
    padding 30px
  // &:last-child
  //   mb 60px
  & + &
    mt 10px
  &__imgover
    w 198px
    border 1px solid #f1f1f1
    ml 40px
    @media $LandscapeMin
      ml 0
      mb 40px
      dn()
    // @media $Mobile370
    //   dn()
  &__img
    max-width 100%
    max-height 100%
  &__content
    w calc(100% - 238px)
    @media $LandscapeMin
      w 100%
    &--full
      w 100%
  &__title
    fontify 24px 600 32px
    mt -6px
  &__text
    mt 25px
    fontify 18px 400 26px
    @media $PortraitMedium
      mt 15px
  &__from
    mt 53px
    color #b8b8b8
    fontify 18px 400 26px
    @media $PortraitMedium
      mt 18px

