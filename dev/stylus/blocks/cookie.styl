.cookie
  pos fixed
  l 50%
  b 20px
  z-index 2
  bgc $blue
  c white
  fontify 18px 400 26px
  w 80%
  max-width 945px
  padding 21px 50px
  transform translateX(-50%)
  @media $LandscapeMin
    l 0
    transform none
    w 100%
    b 0
    padding 20px 30px
  &.hide
    opacity 0
    b -100%
    transition 1.5s bottom, .7s opacity
  &__close
    pos absolute
    r 15px
    t 15px
    size 15px 15px
    background url('data:image/png;base64,') no-repeat center
    transition .7s opacity
    &:hover
      opacity .7