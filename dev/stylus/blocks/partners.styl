.partners
  bgc $dark
  padding 41px 0 90px
  &__slider
    &-wrapper
      pos relative
  &__title
    c white
    fontify 48px 900 48px
    mb 46px
    ml -2px
    @media $LandscapeMedium
      fontify 40px 900 40px
    @media $PortraitMax
      fontify 36px 900 36px
  &__item
    df()
    @media $PortraitMedium
      flex-direction column
    &-iconover
      w 200px
      text-align center
      @media $PortraitMedium
        w 100%
        text-align left
    &-icon
      max-width 80%
    &-content
      w calc(100% - 200px)
      c white
      fontify 18px 400 26px
      pr 20px
      @media $PortraitMedium
        w 100%
        pr 0
        mt 20px
  .swiper-buttons
    pos absolute
    r 0
    t -86px
    @media $LandscapeMedium
      t -83px