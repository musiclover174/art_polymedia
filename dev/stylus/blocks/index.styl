.banner
  pos relative
  &__car
    opacity 0
    transition 2s opacity
    min-height calc(100vh - 50px)
    @media $LandscapeMedium
      min-height 580px
      h calc(100vh - 50px)
    @media $LandscapeMin
      h 100vh
    @media $PortraitMedium
      min-height 500px
      h auto
    &.show
      opacity 1
      & ^[0]__img-wrapper
        opacity 1
        transform-style preserve-3d
        @media $lDesktopSmallFrom
          transform translate3d(5%, -8%, -60px) rotate3d(0.2, -0.3, 0, 22deg) scale(.5)
        @media (max-width: 1600px) and (min-width: 1401px)
          transform translate3d(2%, -10%, -60px) rotate3d(0.2, -0.3, 0, 22deg) scale(.4)
        @media (max-width: 1400px) and (min-width: 1271px)
          transform translate3d(-3%, -16%, -60px) rotate3d(0.2, -0.3, 0, 22deg) scale(.3)
        @media (max-width: 1270px) and (min-width: 1001px)
          transform translate3d(-10%, -16%, -60px) rotate3d(0.2, -0.3, 0, 22deg) scale(.3)
        @media $LandscapeMax
          opacity .2
        @media $PortraitMedium
          opacity .35
    &.animation
      & ^[0]__img-wrapper
        animation movie 8s infinite ease-in-out
  .swiper-slide
    overflow hidden
    z-index 1
    df(flex-end, flex-start)
    pb 195px
    min-height calc(100vh - 50px)
    perspective 1000px
    @media $lDesktopSmall
      pb 170px
    @media $desktopMax
      pb 126px
    @media $LandscapeMax
      pb 97px
    @media $LandscapeMedium
      min-height 580px
      h calc(100vh - 50px)
    @media $LandscapeMin
      h 100vh
    @media $PortraitMedium
      min-height 500px
      pb 75px
      h auto
  .swiper-buttons
    pos absolute
    z-index 1
    b 99px
    l 50%
    w 100%
    max-width 1573px
    padding 0 60px
    transform translateX(-50%)
    @media $lDesktopSmall
      max-width 1366px
      padding 0 32px
      b 60px
    @media $desktopMax
      max-width 1142px
      b 60px
    @media $LandscapeMax
      b 37px
    @media $PortraitMedium
      padding 0 15px
  &__container
    w 100%
    max-width 1573px
    padding 0 60px
    margin 0 auto
    @media $lDesktopSmall
      max-width 1366px
      padding 0 32px
    @media $desktopMax
      max-width 1142px
    @media $PortraitMedium
      padding 0 15px
  &__img
    min-width 100%
    min-height 100%
    @media $LandscapeMax
      size 100%
      object-fit cover
    &-wrapper
      pos absolute
      t 0
      l 0
      min-width 100%
      min-height 100%
      z-index -1
      transform translate3d(0, 0, 0) rotate3d(0, 0, 0, 0) scale(1)
      transition 2s transform
      will-change transform
      &:after
        content ""
        position absolute
        t 0
        l 0
        w 100%
        h calc(100% - 2px)
        z-index 1
        bgc rgba(255,255,255,0.07)
      @media $LandscapeMax
        max-width none
        size 100%
        min-height auto
        min-width auto
        l 0
        transform none
  &__hrefover
    max-width 50%
    pb 23px
    ml -6px
    @media $lDesktopSmall
      ml -4px
    @media $desktopMin
      max-width 70%
    @media $LandscapeMedium
      max-width none
  &__href
    pos relative
    t 0
    color white
    fontify 100px 700 100px
    border-bottom 1px solid rgba(255, 255, 255, .25)
    transition .7s border, .7s top
    @media $lDesktopSmall
      fontify 72px 900 72px
    @media $LandscapeMedium
      fontify 62px 900 62px
    @media $PortraitMedium
      fontify 42px 900 42px
    @media $Mobile
      fontify 32px 900 36px
    &:hover
      border-color transparent
      t 5px
      span
        t 18px
        @media $lDesktopSmall
          t 11px
        @media $LandscapeMedium
          t 9px
        @media $PortraitMedium
          t 3px
    span
      pos relative
      t 23px
      transition .7s top
      @media $lDesktopSmall
        t 16px
      @media $LandscapeMedium
        t 14px
      @media $PortraitMedium
        t 8px

.callback
  bgc $grey
  color $dark
  padding 100px 0 120px
  @media $LandscapeMedium
    padding 70px 0 80px
  @media $PortraitMedium
    bgc white
  @media $PortraitMedium
    pb 128px
  &__form
    bgc white
    mt 70px
    padding 32px 50px 37px 50px
    @media $PortraitMedium
      padding 0
    &-row
      df(flex-start, space-between)
      @media $LandscapeMedium
        flex-direction column
      & + &
        mt 35px
  &__send
    align-content flex-end
    &:hover
      color $dark
  &__spacer
    @media $LandscapeMin
      dn()
  &__agreement
    c $dark
    fontify 18px 400 26px
    mt 30px
    a
      color $blue
      border-bottom 1px solid transparent
      transition .5s border
      &:hover
        border-color alpha($blue, .4)
  
body:not(.index) .callback .common__title
  fontify 48px 900 48px
  @media $LandscapeMedium
    fontify 40px 900 40px
  @media $PortraitMax
    fontify 36px 900 36px