.contacts
  pt 25px
  &__wrapper
    df(flex-start, space-between)
    @media $dekstop1142
      flex-direction column
  &__main
  &__sidebar
    w calc(50% - 24px)
  &__sidebar
    @media $dekstop1142
      w 100%
      mt 80px
      height auto !important
  &__main
    mt -8px
    @media $dekstop1142
      w 100%
      mt 0
  &__form
    bgc white
    padding 45px 50px 50px
    @media $dekstop1142
      width 100% !important
      position initial !important
      transform none !important
    @media $PortraitMedium
      padding 45px 15px 50px
      ml -15px
      width calc(100% + 30px) !important
    &-title
      c $dark
      fontify 24px 600 32px
      mb 34px
      @media $LandscapeMedium
        fontify 20px 600 28px
    &-bottom
      df(flex-start, space-between)
      mt 35px
      @media $LandscapeMin
        flex-direction column
  &__info
    pb 70px
    border-bottom 1px solid $blue
    &-row
      pos relative
      pl 48px
      fontify 24px 600 32px
      max-width 440px
      @media $LandscapeMedium
        fontify 20px 600 28px
        max-width 650px
      &:before
        content ""
        pos absolute
        background-position center
        background-repeat no-repeat
      &[data-type="addr"]:before
        t 7px
        l 12px
        size 17px 24px
        background-image url('data:image/png;base64,')
        @media $LandscapeMedium
          t 3px
      &[data-type="phone"]:before
        t 4px
        l 13px
        size 15px 24px
        background-image url('data:image/png;base64,')
      &[data-type="mail"]:before
        l 9px
        t 9px
        size 23px 15px
        background-image url('data:image/png;base64,')
      & + &
        mt 46px
    &-phone
      c white
    &-mail
      c white
      border-bottom 1px solid rgba(255, 255, 255, .25)
      transition .7s border-color
      &:hover
        border-color transparent
  &__props
    mt 77px
    &-row
      & + &
        mt 21px
    &-title
      c $blue
      fontify 14px 400 18px
      mb 4px
    &-text
      c white
      fontify 18px 400 26px
      max-width 450px
      @media $LandscapeMedium
        max-width 650px
  &__spacer
    @media $LandscapeMin
      dn()

.map
  h 500px
  max-height 60vh
  &:not(:first-child)
    mt 70px
    @media $PortraitMedium
      mt 0
  &__yandex
    size 100%

ymaps[class$="ground-pane"]
  filter grayscale(100%)