html.touchevents .print
  dn()
html.no-touchevents .print
  z-index 10
  w 217px
  c white
  fontify 12px 700 45px
  text-transform uppercase
  letter-spacing .18em
  pl 45px
  pr 20px
  pos fixed
  t 482px
  r -172px
  bgc $blue
  transform rotate(-90deg)
  transform-origin 0 0
  transition .7s background-color
  &:before
    content ""
    pos absolute
    l 12px
    t 14px
    size 17px 18px
    background url('data:image/png;base64,') no-repeat center
    @media $PortraitMedium
      dn()
  &:hover
    bgc #0955a9

