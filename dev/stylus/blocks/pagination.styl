.pagination
  display flex
  justify-content center
  align-items flex-start
  mt 60px
  transition .7s background
  @media $desktopMax
    mb -32px
  &__prev,
  &__next
    ib()
    oh()
    pos relative
    size 120px
    bgc white
    outline none
    transition .7s background
    @media $LandscapeMax
      size 90px
    @media $LandscapeMin
      size 70px
    @media $Portrait560
      size 50px
    @media $PortraitMin
      size 40px
      bgc transparent
    &:before
      content ""
      pos absolute
      bgc $blue
      t 0
      size 100%
      transition .7s left, .7s right
    &:after
      content ""
      pos absolute
      z-index 1
      size 33px 31px
      l 43px
      t 44px
      background url('data:image/png;base64,') no-repeat center
      background-size cover
      transition .7s background
      @media $LandscapeMax
        l 35px
        t 37px
        size 23px 19px
      @media $LandscapeMin
        l 23px
        t 27px
      @media $Portrait560
        l 15px
        t 17px
      @media $PortraitMin
        l 0
        t 11px
    &:not(.disabled):hover
      &:after
        background url('data:image/png;base64,') no-repeat center
        background-size cover
    &.disabled
      opacity .2
      @media $desktopMedium
        dn()
  &__next
    transform scaleX(-1)
    &:before
      r 100%
    &:not(.disabled):hover
      &:before
        r 0
  &__prev
    &:before
      l -100%
    &:not(.disabled):hover
      &:before
        l 0
  &__list
    display flex
  &__item
    bgc white
    text-align center
    fontify 18px 600 26px
    size 120px
    display flex
    align-items center
    justify-content center
    transition .7s background
    @media $LandscapeMax
      size 90px
    @media $LandscapeMin
      size 70px
    @media $Portrait560
      size 50px
    @media $PortraitMin
      size 40px
      bgc transparent
    &:hover,
    &_active
      bgc $blue
      & ^[-1]-href
        c white
    &-href
      size 120px
      pos relative
      c black
      fontify 18px 600 120px
      transition .7s border
