.footer
  bgc #121212
  pt 75px
  color white
  @media $desktopMin
    pt 35px
  @media $PortraitMedium
    pt 43px
  &__top
    @media $PortraitMedium
      mb -70px
  &__top,
  &__bottom
    df()
    pl 33px
    pr 33px
    @media $desktopMin
      flex-wrap wrap
    @media $PortraitMedium
      pl 15px
      pr 15px
  &__bottom
    pt 11px
    pb 9px
    mt 75px
    bgc $dark
    @media $desktopMin
      pb 13px
    @media $PortraitMedium
      pt 17px
      pb 17px
    & ^[0]__right
      @media $LandscapeMin
        flex-direction column
    & ^[0]__col_col2
      @media $LandscapeMedium
        justify-content flex-end
      @media $LandscapeMin
        w calc(100% - 30px)
        mt 10px
        justify-content flex-start
  &__left
    w calc(50% - 24px)
    @media $desktopMin
      w 100%
  &__right
    w calc(50% + 24px)
    df(flex-start, space-between)
    @media $desktopMin
      w calc(100% + 48px)
      ml -48px
      mt 10px
      ^[0]__top &
        mt 40px
    @media $LandscapeMin
      w calc(100% + 30px)
      ml -30px
    @media $PortraitMedium
      flex-direction column
  &__hrefover
    mb 20px
  &__href
    color white
    fontify 14px 600 20px
    transition .7s color
    &:hover
      color $blue
  &__hint
    color rgba(255, 255, 255, .35)
    fontify 14px 400 18px
    max-width 320px
  &__copy
    fontify 12px 600 14px
    letter-spacing .18em
    text-transform uppercase
    mt 6px
  &__col
    ml 48px
    w calc(100% / 3 - 48px)
    @media $LandscapeMin
      w calc(100% / 3 - 30px)
      ml 30px
    @media $PortraitMedium
      w calc(100% - 30px)
    &_col2
      w calc(200% / 3 - 48px)
      df(center, space-between)
      @media $LandscapeMin
        w calc(200% / 3 - 30px)
      @media $PortraitMedium
        flex-direction column
        align-items flex-start
        justify-content flex-start
  &__nav
    overflow hidden
    @media $PortraitMedium
      mb 40px
    &-href
      float left
      clear both
      color alpha(white, .35)
      fontify 14px 400 18px
      transition .7s color
      &:not(&_main):hover, 
      &:not(&_main).active
        color white
      &:not(&_main) + &:not(&_main)
        mt 14px
      &_main
        color white
        fontify 14px 600 18px
        &:hover,
        &.active
          color $blue
        &:not(:first-child)
          mt 40px
      &_main + &
        mt 22px
  &__tel
    ib()
    color white
    fontify 12px 600 14px
    letter-spacing .18em
    text-transform uppercase
    mt 6px
  &__address
    fontify 14px 400 22px
    mt -4px
    @media $desktopMin
      mt -21px
    @media $LandscapeMedium
      dn()
    @media $PortraitMedium
      db()
      mt 0
      mb 10px
  &__dextra
    pos relative
    color silver
    font-family Arial
    fontify 9px 400 14px
    text-transform uppercase
    letter-spacing 0.18em
    ml 100px
    @media $desktopMin
      mt -17px
    @media $LandscapeMin
      mt 0
      ml 84px
    span
      pos absolute
      t 3px
      r calc(100% + 10px)
      bgc #232323
      color white
      font-family Arial
      fontify 12px 900 21px
      text-transform uppercase
      letter-spacing 0.1em
      border-radius 3px
      padding 0 6px
      transition 0.7s background
      @media $PortraitMedium
        w 74px
        text-align center
    &:hover span
      background-color $blue
