@keyframes popupAnimation {
  0% {
    top: 30px;
    opacity: 0;
  }
  100% {
    top: 0;
    opacity: 1;
  }
}

@keyframes lineAnimation {
  0% {
    width: 0;
  }
  100% {
    width: calc(100% - 20px);
  }
}

@keyframes closeAnimation {
  0% {
    background-position: 0 0;
  }
  100% {
    background-position: 0 -1617px;
  }
}

@keyframes searchAnimation {
  0% {
    background-position: 0 0;
  }
  100% {
    background-position: 0 -1029px;
  }
}

@keyframes arrAnimation {
  0% {
    background-position: 0 0;
  }
  100% {
    background-position: 0 -1617px;
  }
}

@keyframes backAnimation {
  0% {
    background-position: 0 0;
  }
  100% {
    background-position: 0 -897px;
  }
}

@keyframes showreel {
  from,
  to {
    transform translate3d(-50%, -50%, -60px) rotate3d(0.2, -0.3, 0, 22deg)
  }

  33% {
    transform translate3d(-50%, -50%, -60px) rotate3d(0.2, -0.3, 0, -12deg)
  }

  66% {
    transform translate3d(-50%, -50%, -60px) rotate3d(0.2, 0.7, 0, 12deg)
  }
}

@keyframes video {
  from,
  to {
    transform translate(-50%, -50%) rotate3d(0.2, -0.3, 0, 22deg) scale(.8)
  }

  33% {
    transform translate(-50%, -50%) rotate3d(0.2, -0.3, 0, -12deg) scale(.8)
  }

  66% {
    transform translate(-50%, -50%) rotate3d(0.2, 0.7, 0, 12deg) scale(.8)
  }
}

