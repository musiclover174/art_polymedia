.sider
  pos relative
  df()
  flex-wrap wrap
  ml -20px
  w calc(100% + 20px)
  pb 10px
  &:after
    content ""
    pos absolute
    l 20px
    r 0
    b 0
    h 1px 
    bgc $blue
  &__item
    ml 20px
    pos relative
    mb 12px
    &:hover
      z-index 1
  &__href
    color inherit
    fontify 18px 400 26px
    transition .7s color
    @media $LandscapeMedium
      fontify 16px 400 24px
    @media $LandscapeMediumMin
      &_havesub:after
        content ""
        ib()
        ml 7px
        mt 11px
        size 9px 5px
        background url('data:image/png;base64,') no-repeat center
        transition .7s background
    &_active,
    &:hover
      color $blue
      @media $LandscapeMediumMin
        &:after
          background url('data:image/png;base64,') no-repeat center
  &__sublist
    visibility hidden
    opacity 0
    pos absolute
    t 30px
    r -24px
    padding 22px 24px
    bgc $blue
    transition .3s visibility, .3s opacity, .3s top
    @media $LandscapeMedium
      dn()
    &:before
      content ""
      pos absolute
      l 0
      t -21px
      h 21px
      w 100%
      @media $LandscapeMedium
        dn()
    @media $LandscapeMediumMin
      ^[0]__item:hover &
        t 44px
        opacity 1
        visibility visible
    &-item
      & + &
        mt 16px
    &-href
      pos relative
      color white
      fontify 14px 600 18px
      transition .7s opacity
      @media $LandscapeMedium
        fontify 18px 600 24px
      &:hover,
      &_active
        opacity .7