.showreel
  padding 150px 0
  bgc $dark
  @media $LandscapeMedium
    dn()
  &__wrapper
    pos relative
    z-index 1
    df(center, space-between)
    padding 150px 0
    color white
    fontify 60px 700 60px
    perspective 1000px
    @media $lDesktopSmall
      fontify 48px 700 48px
    @media $LandscapeMedium
      fontify 32px 700 32px
      flex-direction column
  &__video
    pos absolute
    z-index -1
    l 50%
    t 50%
    transform translate(-50%, -50%)
    opacity .35
    max-width 750px
    animation showreel 8s infinite ease-in-out
  &__count
    w 324px
    @media $LandscapeMedium
      text-align center
      w 100%
      max-width 400px
  &__showreel
    w 324px
    @media $LandscapeMedium
      text-align right
    @media $PortraitMedium
      text-align center
      w 100%
      max-width 400px
  &__href
    pos relative
    z-index 1
    size 56px
    @media $LandscapeMedium
      margin 0 30px
    @media $PortraitMedium
      margin 30px 0
    &:after
      content ""
      pos absolute
      l 50%
      t 50%
      ml -4px
      mt -8px
      size 11px 17px
      background url('data:image/png;base64,') no-repeat center
      transition .7s background
    &:before
      content ""
      size 56px
      pos absolute
      z-index -1
      l 50%
      t 50%
      mt -28px
      ml -28px
      border-radius 50%
      bgc $blue
      transition .7s width, .7s height, .7s margin
    &:hover
      &:after
        background url('data:image/png;base64,') no-repeat center
      &:before
        size 66px
        ml -33px
        mt -33px