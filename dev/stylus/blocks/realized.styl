.realized
  pos relative
  z-index 1
  color white
  padding 100px 0 120px
  @media $LandscapeMedium
    padding 70px 0 80px
  &__bg
    pos absolute
    z-index -1
    t 0
    l 0
    w 100%
    h 100%
    opacity .35
    background-position top center
    background-repeat no-repeat
    background-attachment fixed
    transition .5s background-image
  &__title
    &_inner
      fontify 48px 900 48px
      max-width 770px
      @media $LandscapeMedium
        fontify 40px 900 40px
      @media $PortraitMax
        fontify 36px 900 36px
  &__list
    df()
    flex-wrap wrap
    mt 55px
    ml -48px
    w calc(100% + 48px)
    @media $LandscapeMin
      ml -30px
      w calc(100% + 30px)
  &__item
    w 35.5%
    ml 48px
    mb 65px
    @media $LandscapeMedium
      mb 45px
    @media $LandscapeMin
      ml 30px
      w calc(50% - 30px)
    @media $PortraitMedium
      w calc(100% - 30px)
  &__href
    color white
    fontify 24px 600 32px
    border-bottom 1px dotted rgba(255, 255, 255, .25)
    transition .7s color, .7s border
    @media $LandscapeMedium
      fontify 20px 600 28px
    span
      pos relative
      t 3px
    &:hover
      color $blue
      border-color transparent
  &__toall
    ib()
    mt 47px
    &-title
      fontify 60px 700 68px
      mt 76px
      ml -2px
      @media $lDesktopSmall
        fontify 48px 900 48px
      @media $LandscapeMedium
        fontify 40px 900 40px
  &__card
    padding 120px 0 60px
    opacity 0
    transition .7s opacity
    @media $LandscapeMin
      padding 0
    &-bg
      pos absolute
      z-index -1
      l 0
      t 0
      min-width 100%
      min-height 100%
      opacity 0
      transition 2s transform
      @media $LandscapeMin
        dn()
    &-left
      w calc(50% - 24px)
      @media $LandscapeMin
        w 100%
    &-title
      fontify 72px 700 72px
      ml -4px
      @media $lDesktopSmall
        fontify 60px 700 60px
    &-text
      fontify 24px 600 32px
      mt 70px
    &-more
      ib()
      mt 50px
    &-hashs
      df()
      ml -4px
      w calc(100% + 4px)
      flex-wrap wrap
      mb 30px
    &-hash
      ml 4px
      mb 4px
      bgc $blue
      white-space nowrap
      padding 2px 4px 2px
      fontify 13px 400 14px
    &-video
      ib()
      pos relative
      mt 57px
      color white
      fontify 18px 600 46px
      ml 60px
      &:before
        content ""
        pos absolute
        l -60px
        size 46px
        t 0
        bgc $blue
        border-radius 50%
        transition .7s top, .7s left, .7s width, .7s height  
      &:after
        content ""
        pos absolute
        l -41px
        t 50%
        mt -8px
        size 11px 17px
        background url('data:image/png;base64,') no-repeat center
        transition .7s background
      &:hover
        &:before
          size 57px
          l -67px
          t -5px
        &:after
          background url('data:image/png;base64,') no-repeat center

.popup_realized.show
  .realized__card
    opacity 1
    transition .7s 2s opacity
  .realized__card-bg
    opacity 1
    @media $LandscapeMin
      opacity .25
    @media $lDesktopSmallFrom
      transform translate3d(15%, -14%, -60px) rotate3d(0.2, -0.3, 0, 22deg) scale(.4)
    transform-style preserve-3d
    transition 2s .5s opacity, 2s .5s transform
    @media $LandscapeMinFrom
      animation moviePopup 8s 3s infinite ease-in-out
    @media (max-width: 1600px) and (min-width: 1271px)
      transform translate3d(-4%, -22%, -60px) rotate3d(0.2, -0.3, 0, 22deg) scale(.3)
    @media (max-width: 1270px) and (min-width: 1001px)
      transform translate3d(-12%, -22%, -60px) rotate3d(0.2, -0.3, 0, 22deg) scale(.3)
    @media (max-width:1000px) and (min-width:768px)
      transform translate3d(-16%, -22%, -60px) rotate3d(0.2, -0.3, 0, 22deg) scale(.3)
