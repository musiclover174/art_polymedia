.slider
  margin 60px -124px 70px
  @media $lDesktopSmall
    margin 60px -30px 70px
  @media $desktopMax
    margin 60px -60px 70px
  @media $desktopMedium
    margin 60px 0 70px
  &:not(&_white) &__main .swiper-slide:before
    content ""
    pos absolute
    size 100%
    z-index 1
    bgc alpha($dark, .07)
  &__main
    .swiper-slide
      background-size cover
      background-repeat no-repeat
      background-position center
      h 600px
      @media $desktopMax
        h 500px
      @media $PortraitMax
        h 300px
    &-href
      db()
      pos relative
      z-index 2
      h 100%
  &__thumbs
    mt 5px
    .swiper-buttons
      margin 48px auto 0
      w 100px
      z-index 1
      justify-content space-between
    .swiper-slide
      cursor pointer
      pt 8%
      background-size cover
      background-repeat no-repeat
      background-position center
      @media $desktopMax
        pt 10%
      @media $LandscapeMin
        pt 18%
      @media $PortraitMedium
        pt 28%
      &:after
        content ""
        pos absolute
        l 0
        r 0
        b 0
        t 0
        border 1px solid transparent
        transition .7s border-color
      &-thumb-active:after
        border-color $blue